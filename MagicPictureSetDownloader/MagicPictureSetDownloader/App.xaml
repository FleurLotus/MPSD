<Application x:Class="MagicPictureSetDownloader.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:l="clr-namespace:MagicPictureSetDownloader"
             xmlns:converter="clr-namespace:CommonWPF.Converter;assembly=CommonWPF"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Default  Style -->
        
        
        <!-- Converter -->
        <l:ImageSourceConverter x:Key="imgConv" />
        <BooleanToVisibilityConverter x:Key="b2vConv"/>

        <converter:AggregateConverter x:Key="no2bConv">
            <converter:ObjectNullToBoolConverter/>
            <converter:BoolInvertConverter/>
        </converter:AggregateConverter>
        <converter:AggregateConverter x:Key="nz2vConv">
            <converter:ValueIsZeroToBoolConverter/>
            <converter:BoolInvertConverter/>
            <BooleanToVisibilityConverter/>
        </converter:AggregateConverter>
        <converter:AggregateConverter x:Key="no2vConv">
            <converter:ObjectNullToBoolConverter/>
            <converter:BoolInvertConverter/>
            <BooleanToVisibilityConverter/>
        </converter:AggregateConverter>
    </Application.Resources>
</Application>
