<Application x:Class="MagicPictureSetDownloader.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Common.WPF;component/Resources.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Common.WPF;component/TreeViewStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <Style TargetType="GridSplitter">
                <Setter Property="ShowsPreview" Value="True" />
                <Setter Property="Width" Value="5" />
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="VerticalAlignment" Value="Stretch" />
            </Style>
            <Style TargetType="Border">
                <Setter Property="BorderBrush" Value="Black"/>
                <Setter Property="BorderThickness" Value="1"/>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>